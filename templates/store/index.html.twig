{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <h1>Music Store (Task 5)</h1>

        <div style="margin: 20px 0;">
            <label>Locale:</label>
            <select id="localeSelect">
                <option value="en_US">English</option>
                <option value="de_DE">Deutsch</option>
            </select>

            <label style="margin-left: 20px;">Seed:</label>
            <input type="number" id="seedInput" value="1" min="1" style="width: 80px;">

            <label style="margin-left: 20px;">Likes avg:</label>
            <input type="number" id="likesInput" value="3.5" step="0.1" style="width: 80px;">

            <button onclick="loadSongs()">Reload</button>
        </div>

        <div id="songsContainer"></div>

        <hr>

        <div id="detailsContainer"></div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            loadSongs();
        });
    </script>
{% endblock %}
